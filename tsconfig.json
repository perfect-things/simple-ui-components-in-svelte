{
	"extends": "@tsconfig/svelte/tsconfig.json",
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"lib": [
			"esnext",
			"DOM",
			"DOM.Iterable"
		],
		"moduleResolution": "node",
	},
	"include": [
		"src/**/*",
		"docs-src/**/*"
	],
	"exclude": [
		"docs",
		"node_modules"
	]
}
